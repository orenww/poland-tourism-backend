generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chain {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  type        String    // "hotel", "restaurant", "attraction", "shopping"
  benefit     String?   @db.Text
  website     String?
  logoUrl     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  subItems    SubItem[]
}

model Category {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  icon      String?
  order     Int      @default(0)
  items     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id              Int       @id @default(autoincrement())
  name            String
  description     String
  categoryId      Int
  nearLocationIds Json      @default("[]")
  images          Json      @default("[]")
  textContent     Json      @default("{}")
  category        Category  @relation(fields: [categoryId], references: [id])
  subItems        SubItem[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model SubItem {
  id          Int      @id @default(autoincrement())
  itemId      Int
  sectionType String
  name        String
  description String
  address     String?
  website     String?
  priceRange  String?
  hours       String?
  ticketPrice String?
  type        String?
  benefit     String?
  images      Json     @default("[]")
  item        Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  chainId     Int?
  chain       Chain?    @relation(fields: [chainId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Subscriber {
  id                         Int       @id @default(autoincrement())
  email                      String    @unique
  verified                   Boolean   @default(false)
  verificationToken          String?   @unique
  verificationTokenExpiresAt DateTime?
  verifiedAt                 DateTime?
  subscribedAt               DateTime  @default(now())
  unsubscribedAt             DateTime?
  consentGiven               Boolean   @default(true)
  ipAddress                  String?
  language                   String    @default("he")
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
}
